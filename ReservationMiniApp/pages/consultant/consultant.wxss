.day-status-2::after,
.day-status-3::after {
  display: inline-block;
  width: 7.5vh;
  margin: 1vh 0;
  padding: 1vh 0;
  color: #fff;
  border-radius: 1vh 0 1vh 0;
}

.day-status-2::after {
  content: "未开放";
  background-color: #212121;
}

.day-status-3::after {
  content: "约满";
  background-color: #ff5252;
}